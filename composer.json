{
    "name": "plinker/lxd",
    "type": "library",
    "description": "Control LXD through RPC",
    "license": "MIT",
    "keywords": [
        "lxd",
        "plinker",
        "rpc",
        "containers"
    ],
    "homepage": "http://github.com/plinker-rpc/lxd",
    "authors": [
        {
            "name": "Lawrence Cherone",
            "email": "lawrence@cherone.co.uk",
            "homepage": "http://github.com/plinker-rpc",
            "role": "Owner"
        }
    ],
    "require": {
        "plinker/core": ">=0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*"
    },
    "autoload": {
        "psr-4": {
            "Plinker\\Lxd\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plinker\\Lxd\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --coverage-text"
    },
    "minimum-stability": "stable"
}
